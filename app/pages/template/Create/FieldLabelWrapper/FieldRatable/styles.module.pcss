.rating-toggle {
    appearance: none;
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: center;
    gap: .25rem;
    font-family: monospace;
    font-size: 1rem;
    cursor: pointer;
}

.rating-toggle::after {
    content: '▁ ▃ ▅';
    font-size: 0.75rem;
}

.rating-toggle:checked::after {
    color: lightblue;
}

.rating-toggle:not(:checked)::after {
    color: lightgrey;
}