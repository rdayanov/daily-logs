.field-label-wrapper {
    position: relative;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
}

.field-drag-handle {
    position: absolute;
    left: -2rem;
    height: 3rem;
    padding-top: 0.5rem;
    cursor: pointer;
}

.field-label {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    gap: 0.25rem;
}
